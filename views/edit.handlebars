<div class="container d-flex justify-content-center mt-3" style="height: 500px;">
  <div class="d-flex my-auto justify-content-center" style="width: 45%; background-color: #FAFAFA">

    <form class="d-flex flex-column" style="width: 70%; height:100%" action="/records/{{ records._id }}/edit"
      method="POST">
      <h4 class="mx-auto mt-3">請輸入你的支出</h4>
      <div class="d-flex mx-auto flex-column justify-content-center ">

        <div class="input-group my-5 align-items-center">
          <label class="mr-4" for="title">名稱：</label>
          <input class="rounded" type="text" class="form-control" id="title" name="name" value="{{ records.name }}"
            required>
        </div>

        <div class="input-group mb-5 align-items-center">
          <label class="mr-4" for="date">日期：</label>
          <input class="rounded" type="date" class="form-control" id="date" name="date" value="{{ records.date }}"
            required>
        </div>

        <div class="input-group mb-5 align-items-center">
          <label class="mr-4" for="title">類別：</label>
          <select class="rounded" type="" class="form-control" id="title" name="category"
            aria-valuemax="{{ records.category }}" required>
            <option value="交通費">家居物業</option>
            <option value="電信費">交通出行</option>
            <option value="電信費">休閒娛樂</option>
            <option value="電信費">餐飲食品</option>
            <option value="電信費">其他</option>
          </select>
        </div>
        <div class="input-group mb-4 align-items-center">
          <label class="mr-4" for="title">金額：</label>
          <input class="rounded" type="text" class="form-control" id="title" name="amount" value="{{ records.amount }}"
            required>
        </div>
      </div>

      <div class="d-flex justify-content-center mx-auto mb-3">
        <button type="submit" class="btn btn-primary">送出</button>
      </div>
    </form>
  </div>
</div>