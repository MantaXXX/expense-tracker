<div class="container d-flex justify-content-center">
  <div class="col-7">
    <div class="category mt-3">
      <select class="form-control" id="exampleFormControlSelect1">
        <option value="類別" selected>總支出</option>
        <option value="交通費">家居物業</option>
        <option value="電信費">交通出行</option>
        <option value="電信費">休閒娛樂</option>
        <option value="電信費">餐飲食品</option>
        <option value="電信費">其他</option>
      </select>
    </div>

    <div class="my-4">
      <span>總金額</span>
      <input type="text" style="color: #FF8000; width: 300px; border: none; padding-left: 20px; font-size: 40px;"
        name="number" value="25555" disabled>
    </div>
    <div class="my-3">
      <ul class="list-group">
        {{#each records}}
        <li class="list-group-item d-flex align-items-center" style="height: 100px;">
          <div class="col-2" style="text-align: center; line-height: 100px">
            <i class="fas fa-utensils fa-2x"></i>
          </div>

          <div class="col-4">
            <h6>{{ this.name }}</h6>
            <h6>{{ this.date }}</h6>
          </div>

          <div class="col-2" style="text-align: center; line-height: 100px">
            <span>{{ this.amount }}</span>
          </div>

          <div class="col-4" style="text-align: center; line-height: 100px">
            <a class="btn btn-outline-success" href="./records/{{ this._id }}/edit">Edit</a>
            <form action="/records/{{ this._id }}/delete" method=" POST" style="display: inline;">
              <button type="submit" class="btn btn-outline-danger">Delete</button>
            </form>
          </div>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>